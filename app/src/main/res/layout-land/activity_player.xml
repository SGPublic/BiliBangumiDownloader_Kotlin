<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/player_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="end"
    tools:ignore="MissingDefaultResource">
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_exoplayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:use_controller="false">
        <ProgressBar
            android:id="@+id/player_controller_loading"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player_controller"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:orientation="horizontal"
                android:background="@drawable/shape_player_top"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <ImageView
                    android:id="@+id/player_controller_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_back"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/color_player_controller"
                    tools:ignore="ContentDescription" />
                <io.github.sgpublic.bilidownload.widget.ScrollTextView
                    android:id="@+id/player_controller_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="400dp"
                    android:textSize="16sp"
                    android:textColor="@color/color_player_controller"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="30dp"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/shape_player_bottom"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:id="@+id/player_controller_time_current"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:textColor="@color/color_player_controller"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/player_controller_seek"
                    app:layout_constraintBottom_toBottomOf="@id/player_controller_seek" />
                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/player_controller_seek"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/player_controller_time_current"
                    app:layout_constraintRight_toLeftOf="@id/player_controller_time_total"/>
                <TextView
                    android:id="@+id/player_controller_time_total"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="14sp"
                    android:textColor="@color/color_player_controller"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/player_controller_seek"
                    app:layout_constraintBottom_toBottomOf="@id/player_controller_seek" />
                <ImageView
                    android:id="@+id/player_controller_play"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_player_play"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/color_player_controller"
                    tools:ignore="ContentDescription"
                    app:layout_constraintTop_toBottomOf="@id/player_controller_seek"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/player_controller_episode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:text="@string/text_player_episode"
                    android:textSize="16sp"
                    android:textColor="@color/color_player_controller"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/player_controller_seek"
                    app:layout_constraintRight_toLeftOf="@id/player_controller_quality"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/player_controller_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginEnd="10dp"
                    android:padding="10dp"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:textSize="16sp"
                    android:textColor="@color/color_player_controller"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/player_controller_seek"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.exoplayer2.ui.PlayerView>

    <FrameLayout
        android:id="@+id/player_panel_base"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="end">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player_panel_cover"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@color/color_player_panel"
            android:layout_gravity="end"
            android:clickable="true">
            <TextView
                android:id="@+id/player_episode_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/text_player_current"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_player_controller"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ListView
                android:id="@+id/player_panel_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/player_episode_list_title"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.drawerlayout.widget.DrawerLayout>