<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_exoplayer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_player"
        android:keepScreenOn="true"
        app:use_controller="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="16:9" />
    <ProgressBar
        android:id="@+id/player_controller_loading"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_controller"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <com.google.android.exoplayer2.ui.SubtitleView
            android:id="@+id/player_subtitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/player_controller_down"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player_controller_down"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/shape_player_bottom"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/player_controller_seek"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/player_controller_play"
                app:layout_constraintRight_toLeftOf="@id/player_controller_time_duration"/>
            <TextView
                android:id="@+id/player_controller_time_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="12sp"
                android:textColor="@color/color_player_controller"
                app:layout_constraintRight_toLeftOf="@id/player_controller_fullscreen"
                app:layout_constraintTop_toTopOf="@id/player_controller_seek"
                app:layout_constraintBottom_toBottomOf="@id/player_controller_seek" />
            <ImageView
                android:id="@+id/player_controller_fullscreen"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_player_fullscreen"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:layout_gravity="center_vertical"
                app:tint="@color/color_player_controller"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/player_controller_seek"
                app:layout_constraintBottom_toBottomOf="@id/player_controller_seek"
                tools:ignore="ContentDescription"/>
            <ImageView
                android:id="@+id/player_controller_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_player_play"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:layout_gravity="center_vertical"
                app:tint="@color/color_player_controller"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/player_controller_seek"
                app:layout_constraintBottom_toBottomOf="@id/player_controller_seek"
                tools:ignore="ContentDescription"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>