<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="620dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWindowBackground"
    android:overScrollMode="never">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/season_cover_base"
            android:layout_width="90dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintDimensionRatio="3:4"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp">
            <ImageView
                android:id="@+id/season_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/season_rating_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/color_season_score"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@id/season_rating_star"
            app:layout_constraintLeft_toLeftOf="@id/season_rating_star"
            app:layout_constraintRight_toRightOf="@id/season_rating_star"/>
        <RatingBar
            android:id="@+id/season_rating_star"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="@color/color_season_score"
            android:secondaryProgressTint="@color/color_season_score"
            android:max="100"
            android:numStars="5"
            app:layout_constraintBottom_toBottomOf="@id/season_cover_base"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/season_rating_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:text="@string/title_season_rating_null"
            android:textColor="@color/color_text_dark"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/season_rating_star"
            app:layout_constraintLeft_toLeftOf="@id/season_rating_star"
            app:layout_constraintRight_toRightOf="@id/season_rating_star"/>
        <TextView
            android:id="@+id/season_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/color_text_normal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@id/season_cover_base"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/season_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:maxLines="3"
            android:lineSpacingExtra="4dp"
            android:textSize="14sp"
            android:textColor="@color/color_text_dark"
            app:layout_constraintBottom_toBottomOf="@id/season_cover_base"
            app:layout_constraintLeft_toRightOf="@id/season_cover_base"
            app:layout_constraintRight_toLeftOf="@id/season_rating_star"/>
        <TextView
            android:id="@+id/season_origin_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/title_season_origin_name"
            android:textSize="14sp"
            android:textColor="@color/color_text_dark"
            app:layout_constraintTop_toBottomOf="@id/season_cover_base"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/season_origin_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="@color/color_text_light"
            app:layout_constraintTop_toTopOf="@id/season_origin_name_title"
            app:layout_constraintBottom_toBottomOf="@id/season_origin_name_title"
            app:layout_constraintLeft_toRightOf="@id/season_origin_name_title"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/season_styles_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/title_season_styles"
            android:textSize="14sp"
            android:textColor="@color/color_text_dark"
            app:layout_constraintTop_toBottomOf="@id/season_origin_name"
            app:layout_constraintStart_toStartOf="parent" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/season_styles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/season_styles_title"
            app:layout_constraintBottom_toBottomOf="@id/season_styles_title"
            app:layout_constraintStart_toEndOf="@id/season_styles_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/item_season_style"/>
        <TextView
            android:id="@+id/season_celebrity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/season_styles_title"
            app:layout_constraintStart_toStartOf="@id/season_styles_title"
            android:text="@string/title_season_celebrity" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/season_celebrity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/season_celebrity_title"
            tools:listitem="@layout/item_season_celebrity"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal" />
        <TextView
            android:id="@+id/season_actors_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/title_season_actors"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/season_celebrity"
            app:layout_constraintLeft_toLeftOf="parent"  />
        <TextView
            android:id="@+id/season_actors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/color_text_light"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/season_actors_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/season_staff_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/title_season_staff"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/season_actors"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/season_staff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/color_text_light"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/season_staff_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/season_evaluate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/title_season_evaluate"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/season_staff"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/season_evaluate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/color_text_light"
            app:layout_constraintTop_toBottomOf="@id/season_evaluate_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>