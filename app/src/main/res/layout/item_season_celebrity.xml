<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="80dp"
    android:layout_marginHorizontal="4dp"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_season_celebrity_avatar_base"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="3:4"
        app:cardCornerRadius="4dp"
        style="?materialCardViewFilledStyle">
        <ImageView
            android:id="@+id/item_season_celebrity_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/item_season_celebrity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_season_celebrity_avatar_base"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="1dp"
        android:textColor="@color/color_text_normal"
        android:textSize="14sp"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/item_season_celebrity_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_season_celebrity_name"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/color_text_dark"
        android:textSize="12sp"
        android:ellipsize="end"/>
</androidx.constraintlayout.widget.ConstraintLayout>