<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_download_episode_cover_base"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        style="?materialCardViewFilledStyle"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:10">
        <ImageView
            android:id="@+id/item_download_episode_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/item_download_episode_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/color_text_normal"
        app:layout_constraintTop_toTopOf="@id/item_download_episode_cover_base"
        app:layout_constraintLeft_toRightOf="@id/item_download_episode_cover_base"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="20dp" />
    <TextView
        android:id="@+id/item_download_episode_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/color_text_normal"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@id/item_download_episode_progress"
        app:layout_constraintLeft_toLeftOf="@id/item_download_episode_title"
        app:layout_constraintRight_toRightOf="@id/item_download_episode_title"/>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/item_download_episode_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:max="100"
        tools:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/item_download_episode_cover_base"
        app:layout_constraintLeft_toLeftOf="@id/item_download_episode_title"
        app:layout_constraintRight_toRightOf="@id/item_download_episode_title" />
    <TextView
        android:id="@+id/item_download_episode_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/color_text_dark"
        android:visibility="gone"
        tools:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/item_download_episode_progress"
        app:layout_constraintLeft_toLeftOf="@id/item_download_episode_title"/>
    <View
        android:id="@+id/item_download_episode_selected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:alpha="0.3"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>