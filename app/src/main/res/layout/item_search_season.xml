<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_search_base_go"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingTop="10dp"
    android:paddingBottom="15dp"
    android:foreground="?android:attr/selectableItemBackground"
    tools:ignore="NestedWeights">

    <androidx.cardview.widget.CardView
        android:layout_width="84dp"
        android:layout_height="112dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_search_season_placeholder"
            android:scaleType="fitCenter"
            android:src="@drawable/pic_doing_h"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/item_search_season_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:alpha="0"
            android:scaleType="fitStart"
            tools:ignore="ContentDescription" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/color_vip_big"
            app:cardElevation="0dp"
            app:cardCornerRadius="2dp">

            <TextView
                android:id="@+id/item_season_badges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_search_season_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_text_normal"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_search_season_content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="2dp"
                    android:textSize="11sp"
                    android:textColor="@color/color_text_dark"
                    android:lines="2"
                    android:ellipsize="end"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_search_rating_string"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_season_score"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/item_search_rating_null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:text="@string/title_season_rating_null"
                        android:textColor="@color/color_text_dark"
                        android:textSize="12sp" />
                </FrameLayout>

                <RatingBar
                    android:id="@+id/item_search_rating_start"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/color_season_score"
                    android:secondaryProgressTint="@color/color_season_score"
                    android:max="100"
                    android:numStars="5" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/color_button_alert"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/item_search_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/title_search_go"
                android:textSize="12sp"
                android:textColor="@color/colorCompat" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>